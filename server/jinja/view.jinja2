{% extends "base.jinja" %}

{% set accessor = record.accessor %}

{% block title %}
Accessor: {{ record.name }}
{% endblock %}

{% block content %}

<h1>Accessor: {{ record.name }}</h1>
<em>Last Updated: {{ record.compilation_timestamp.humanize() }}</em>

<h2>About</h2>
<dl class="dl-horizontal">
  <dt>Author Name</dt><dd>{{ accessor.author.name }}</dd>
  <dt>Author Email</dt><dd>{{ accessor.author.email }}</dd>
  <dt>Links</dt><dd><a href="/accessor{{ record.path }}.json">JSON</a> | <a href="/accessor{{ record.path }}.xml">XML</a></dd>
</dl>



<div class="panel panel-default">
  <div class="panel-body">
    {{ accessor.description|markdown }}
  </div>
</div>


<h2>Ports</h2>
<ul class="list-group">
  {% for port in accessor.ports %}
  <li class="list-group-item">
    <h4>{{ port.name }}</h4>
    <p>{{ port.description }}</p>
    <dl class="dl-horizontal">
      <dt>Directions</dt><dd>{{ port.directions }}</dd>
      <dt>Type</dt><dd>{{ port.type }}</dd>
      <dt>Units</dt><dd>{{ port.unit }}</dd>
      <dt>Options</dt><dd>{{ port.options }}</dd>
      <dt>Min</dt><dd>{{ port.min }}</dd>
      <dt>Max</dt><dd>{{ port.max }}</dd>
    </dl>
  </li>
  {% endfor %}
</ul>


<h2>Parameters</h2>
<ul class="list-group">
  {% for parameter in accessor.parameters %}
  <li class="list-group-item">
    <h4>{{ parameter.name }}</h4>
    {% if parameter.default %}
    <p><em><strong>Default: </strong>{{ parameter.default }}</em></p>
    {% endif %}
    <p>{{ parameter.description }}</p>
  </li>
  {% endfor %}
</ul>


<h2>Dependencies</h2>
<ul class="list-group">
  {% for dep in accessor.dependencies %}
  <li class="list-group-item">
    <h4>{{ dep.name }}</h4>
    <p>{{ dep.description }}</p>
  </li>
  {% endfor %}
</ul>


<h2>Usage Examples</h2>

<h3>Node.js</h3>
<div class="panel panel-default">
  <div class="panel-body">
    <pre>
{{ usage_examples.node|escape }}
    </pre>
  </div>
</div>


<h2>Accessor JavaScript Code</h2>
<div class="panel panel-default">
  <div class="panel-body">
    <pre>
{{ accessor.code_alternates.javascript|escape }}
    </pre>
  </div>
</div>

{% endblock %}
